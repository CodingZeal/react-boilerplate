{
  "name": "zeal-react-boilerplate",
  "version": "0.0.1",
  "description": "Zeal's React/Redux boilerplate setup",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production ./node_modules/.bin/webpack",
    "dev": "webpack-dev-server --devtool eval --progress --colors --hot --history-api-fallback",
    "lint": "eslint 'client/**/*.js'",
    "postinstall": "npm run build",
    "starterapp": "webpack-dev-server --config webpack/starterApp.js --devtool eval --progress --colors --hot --history-api-fallback",
    "test": "env NODE_PATH=$NODE_PATH:$PWD/client ./node_modules/.bin/mocha --opts client/__tests__/mocha.opts",
    "test:debug": "./node_modules/.bin/karma start client/__tests__/karma.conf.js",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodingZeal/react-boilerplate.git"
  },
  "homepage": "https://github.com/CodingZeal/react-boilerplate",
  "bugs": {
    "url": "https://github.com/CodingZeal/react-boilerplate/issues"
  },
  "author": "Randy Coulman <randy@codingzeal.com> (http://codingzeal.com)",
  "license": "MIT",
  "engines": {
    "node": "5.3.0",
    "npm": "3.3.12"
  },
  "private": true,
  "dependencies": {
    "babel": "^6.3.26",
    "babel-core": "^6.3.26",
    "babel-eslint": "^4.1.8",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "bootswatch": "^3.3.6",
    "chai": "^3.4.1",
    "css-loader": "^0.23.1",
    "css-modules-require-hook": "^2.1.0",
    "es6-promise": "^3.0.2",
    "eslint": "^2.2.0",
    "eslint-config-zeal": "^0.5.1",
    "eslint-import-resolver-webpack": "^0.1.5",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-import": "^1.0.0-beta.0",
    "eslint-plugin-react": "^4.1.0",
    "expect-react-shallow": "^1.1.0",
    "exports-loader": "^0.6.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "flux-standard-action": "^0.6.0",
    "history": "^1.17.0",
    "imports-loader": "^0.6.5",
    "karma": "^0.13.17",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^0.2.2",
    "karma-cli": "^0.1.2",
    "karma-mocha": "^0.2.1",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.3.4",
    "node-sass": "^3.4.2",
    "ramda": "^0.19.1",
    "react": "^0.14.5",
    "react-addons-test-utils": "^0.14.5",
    "react-bootstrap": "^0.28.1",
    "react-css-modules": "^3.6.3",
    "react-dom": "^0.14.5",
    "react-hot-loader": "^1.3.0",
    "react-redux": "^4.0.6",
    "react-router": "^1.0.3",
    "react-router-named-routes": "0.0.7",
    "react-router-redux": "^2.1.0",
    "redux": "^3.1.0",
    "redux-api-middleware": "^1.0.0-beta3",
    "redux-form": "^4.1.2",
    "redux-thunk": "^1.0.3",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.9",
    "webpack-dev-server": "1.14.0",
    "whatwg-fetch": "^0.11.0"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  }
}
